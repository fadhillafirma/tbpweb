<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Event</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/assets/style.css">
</head>
<body class="bg-gray-100 font-sans">
  <header class="bg-white shadow-md">
    <div class="max-w-6xl mx-auto flex justify-between items-center py-4 px-6">
      <div class="flex items-center space-x-2">
        <img src="/images/Logo.png" alt="Logo" class="w-10 h-10" />
      </div>

      <nav class="flex space-x-6 text-blue-800 font-medium ml-auto">
        <a href="/home" class="hover:underline">Home</a>
        <a href="/" class="hover:underline">Events</a>
        <a href="/ticket" class="hover:underline">Ticket</a>
      </nav>
    </div>
  </header>

  <main class="max-w-6xl mx-auto mt-10 px-4">
    <h2 class="text-5xl font-bold text-blue-800 mb-6">Edit Event</h2>

    <form action="/event/update/<%= event.id %>" method="POST" enctype="multipart/form-data">
      <div class="bg-white rounded-lg shadow p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
          <div>
            <label class="block mb-1 font-medium">Deskripsi</label>
            <textarea name="description" rows="6" class="w-full border rounded-2xl px-3 py-2"><%= event.description %></textarea>
          </div>

          <div>
            <label class="block mb-1 font-medium">Poster</label>
            <input type="file" name="poster" accept="image/*" onchange="previewPoster(event)" class="w-full" />
            <% if (event.poster_url) { %>
              <img id="posterPreview" src="<%= event.poster_url %>" alt="Preview Poster" class="mt-3 max-h-40" />
            <% } else { %>
              <img id="posterPreview" src="#" alt="Preview Poster" class="mt-3 max-h-40 hidden" />
            <% } %>
          </div>
        </div>

        <div class="space-y-4">
          <div>
            <label class="block mb-1 font-medium">Nama Event</label>
            <input type="text" name="name" value="<%= event.name %>" required class="w-full border rounded-2xl px-3 py-2" />
          </div>

          <div>
            <label class="block mb-1 font-medium">Tanggal Event</label>
            <input type="date" name="event_date" value="<%= event.event_date.toISOString().split('T')[0] %>" required class="w-full border rounded-2xl px-3 py-2" />
          </div>

          <div>
            <label class="block mb-1 font-medium">Lokasi</label>
            <input type="text" name="location" value="<%= event.location %>" required class="w-full border rounded-2xl px-3 py-2" />
          </div>
          
          <div>
            <label class="block mb-1 font-medium">Fakultas</label>
            <input type="text" name="fakultas" value="<%= event.fakultas %>" readonly class="bg-gray-100 border px-3 py-2 rounded w-full text-gray-500 cursor-not-allowed">
          </div>
        </div>
      </div>

      <div class="flex justify-end mt-6">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-2 rounded-lg">
          Simpan
        </button>
      </div>
    </form>
  </main>

  <script src="/public/javascripts/editevent.js"></script>
</body>
</html>
