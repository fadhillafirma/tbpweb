<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title style="color: darkblue;"> Uvent </title>

        <style>
            @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
            
            * {
                padding: 0%;
                margin: 0%;
                box-sizing: border-box;
                font-family: 'Poppins';
                font-weight: 600;
                list-style: none;
                text-decoration: none;
            }

            html, body {
                margin: 0;
                padding: 0;
                height: 100%;
                overflow-x: hidden;
                overflow-y: hidden;
            }

            header {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                z-index: 1000;
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 10px 5%;
                background: white;
                padding: 2%;
            }

            .logo-container {
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .slogan {
                position: relative;
                font-size: 16px;
                font-weight: 600;
                color: #333;
                white-space: nowrap;
                margin-right: 1000px;
                margin-bottom: -5;
            }

            .foto-char {
                height: auto;
                margin: 0;
                padding: 0;
                width: 150%;
                display: flex;
                justify-content: center;
                position: relative;
                top: -500px;
                right: -8%;
            }

            .foto-char img {
                display: block;
                max-width: 150%;
                height: auto;
                object-fit: cover;
            }

            .char {
                position: relative;
                width: 100%;
                height: 55vh;
                display: flex;
                align-items: flex-end;
                margin-right: 250px;
            }

            .char h2 {
                position: absolute;
                left: 20px;
                bottom: 75px;
                color: black;
                font-size: 45px;
                padding: 0%;
            }

            .char h4 {
                position: absolute;
                left: -165px;
                bottom: -25%;
                color: black;
                font-size: 15px;
                padding: 10%;
            }

            .char h2, .char h4, p {
                margin-left: 150px;
            }

            .button {
                color: rgb(255, 255, 255);
                background-color: rgb(31, 22, 148);
                margin-left: 170px;
                margin-bottom: 10px;
                z-index: 1001;
                position: relative;
                display: inline-block;
                padding: 0px 20px 0px 20px;
                border-radius: 10px;
                text-decoration: none; /* Ensure no underline */
            }

            .button:hover {
                background-color: rgb(23, 14, 98); /* Darker shade on hover */
            }

            body {
                background: #ffffff;
            }

            .panah {
                position: absolute;
                margin-bottom: 20px;
            }

            .navbut {
                display: flex;
                justify-content: center;
                gap: 65px;
            }

            .navbut a {
                color: rgb(0, 0, 0);
                font-size: 15px;
                border-bottom: 2px solid transparent;
                transition: all .55s ease;
                padding: 8px 15px;
            }

            .navbut a:hover {
                border-bottom: 2px solid rgb(0, 0, 0);
            }

            #menu-icon {
                color: rgb(0, 0, 0);
                font-size: 35px;
                z-index: 10001;
                display: none;
            }
        </style>

        <!-- External Links -->
        <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
        <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    </head>
    <body>
        <header>
            <!-- Menyisipkan dashboard.html -->
            <div data-include="dashboard.html"></div>

            <!-- Memuat script include -->
            <script src="include.js"></script>

            <div class="bx bx-menu" id="menu-icon"> </div>
        </header>

        <span class="slogan">Uvent</span>

        <section class="char">
            <h2>Selamat Datang!</h2>
        </section>

        <!-- Button that navigates to event.ejs -->
        <a href="event.ejs" class="button">Telusurin yuk!</a>

        <span class="panah">
            <img src="data:image/png;base64,"/>
        </span>

        <div class="foto-char">
            <img src="images/festival.png" width="40%" height="70%">
        </div>
    </body>
</html>
